{
  "name": "@hydroperx/metrodesign",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc && npm run build_copy",
    "build_copy": "copy-and-watch \"src/**/*.{json,css,svg,png,jpg,jpeg,webp,gif}\" dist",
    "doc": "npx typedoc",
    "watch": "run-p watch_ts watch_copy",
    "watch_ts": "tsc --watch",
    "watch_copy": "copy-and-watch --watch \"src/**/*.{json,css,svg,png,jpg,jpeg,webp,gif}\" dist",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    "./components": {
      "typedoc": "./src/components/index.ts",
      "types": "./dist/components/index.d.ts",
      "default": "./dist/components/index.js"
    },
    "./components/Group": {
      "typedoc": "./src/components/Group.tsx",
      "types": "./dist/components/Group.d.ts",
      "default": "./dist/components/Group.js"
    },
    "./components/Icon": {
      "typedoc": "./src/components/Icon.tsx",
      "types": "./dist/components/Icon.d.ts",
      "default": "./dist/components/Icon.js"
    },
    "./components/ProgressRing": {
      "typedoc": "./src/components/ProgressRing.tsx",
      "types": "./dist/components/ProgressRing.d.ts",
      "default": "./dist/components/ProgressRing.js"
    },
    "./components/Root": {
      "typedoc": "./src/components/Root.tsx",
      "types": "./dist/components/Root.d.ts",
      "default": "./dist/components/Root.js"
    },
    "./enum": {
      "typedoc": "./src/enum/index.ts",
      "types": "./dist/enum/index.d.ts",
      "default": "./dist/enum/index.js"
    },
    "./fonts": {
      "typedoc": "./src/fonts/index.ts",
      "types": "./dist/fonts/index.d.ts",
      "default": "./dist/fonts/index.js"
    },
    "./layout": {
      "typedoc": "./src/layout/index.ts",
      "types": "./dist/layout/index.d.ts",
      "default": "./dist/layout/index.js"
    },
    "./theme": {
      "typedoc": "./src/theme/index.ts",
      "types": "./dist/theme/index.d.ts",
      "default": "./dist/theme/index.js"
    },
    "./utils": {
      "typedoc": "./src/utils/index.ts",
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "description": "Metro design components for React.js.",
  "repository": {
    "url": "https://github.com/hydroperx/metrodesign.js.git"
  },
  "license": "Apache-2.0",
  "keywords": [
    "metro",
    "ui"
  ],
  "author": "Hydroper <HydroperFox@gmail.com>",
  "dependencies": {
    "@floating-ui/dom": "^1.7.1",
    "@fontsource/courier-prime": "^5.2.8",
    "@fontsource/noto-sans": "^5.2.10",
    "@hydroperx/color": "^1.0.0",
    "@hydroperx/draggable": "^1",
    "@hydroperx/event": "^1.0.0",
    "@hydroperx/inputaction": "^1.0.0",
    "assert": "^2.1.0",
    "extend": "^3.0.2",
    "focus-lock": "^1.3.6",
    "getoffset": "^0.6.4",
    "gsap": "^3.13.0",
    "jquery": "^3.7.1",
    "rectangle-overlap": "^2.0.0",
    "styled-components": "^6.1.16"
  },
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "devDependencies": {
    "@types/assert": "^1.5.11",
    "@types/extend": "^3.0.4",
    "@types/jquery": "^3.5.32",
    "@types/react": "^19.0.0",
    "copy-and-watch": "^0.1.8",
    "npm-run-all": "^4.1.5",
    "typedoc": "^0.28.7",
    "typescript": "~5.6.2",
    "vite": "^6.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
